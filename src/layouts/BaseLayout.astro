---
import "../styles/global.css";
import { SITE } from "../deed.config"
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

type Props = { 
	title?: string; 
	description?: string; 
	emptyLayout?: boolean 
}

const { title, description, emptyLayout = false } = Astro.props;
---

<html lang="zh-CN">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="description" content= { description ?? SITE.DESCRIPTION } />
		<meta name="keywords" content={ SITE.KEYWORDS } />
		<meta name="generator" content={Astro.generator} />

		<link rel="canonical" href={Astro.url} />
		<link rel="icon" type="image/svg+xml" href="/logo.svg" />
		<link rel="sitemap" href="/sitemap-index.xml" />

		<title>{title ? title+' - '+SITE.TITLE : SITE.TITLE}</title>
	</head>
	<body class="bg-white dark:text-neutral-100 dark:bg-black">

        {!emptyLayout && <Header />}

        <slot />

		{!emptyLayout && <Footer />}

		<script defer src="https://stats.betterapi.net/stats.js" data-website-id="45070bcb-d396-447c-92b3-81cf2a8c90b9"></script>

	</body>
</html>